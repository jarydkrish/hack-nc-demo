<% if notice %>
  <div id="notice" class="alert alert-secondary alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<h1>Course</h1>

<div id="courses" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <%= render @courses %>
</div>

<%= link_to "New course", new_course_path %>
